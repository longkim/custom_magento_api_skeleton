        </xeroapi>
    </tabs>
    <sections>
        <xeroapi translate="label" module="xeroapi">
            <label>Xero and Talink Api</label>
            <tab>xeroapi</tab>
            <frontend_type>text</frontend_type>
            <sort_order>111</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <xero translate="label">
                    <label>Xero Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>999</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <active translate="label">
                            <label>Enable Xero Setting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </active>
                        <is_talink translate="label">
                            <label>Use Talink ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </is_talink>
                        <talink_url translate="label">
                            <label>Talink Url</label>
                            <comment><![CDATA[Uses https://talink.towersystems.com.au/wsdl/rcti_to_xero.php?wsdl if left blank]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </talink_url>
                        <api_url translate="label">
                            <label>Api Url</label>
                            <comment><![CDATA[Uses https://api.xero.com/api.xro/2.0/ if left blank]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </api_url>
                        <cons_key translate="label">
                            <label>Consumer Key</label>
                            <comment><![CDATA[Uses QTC9204DIAYXRT7PIGCE8V70QXSJFL if left blank]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cons_key>
                        <cons_sec translate="label">
                            <label>Consumer Secret</label>
                            <comment><![CDATA[Uses 5SIJM8OKGKQLQVF3GBIYKVQUDSAMPT if left blank]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cons_sec>
                         <account_code translate="label">
                            <label>Account Code</label>
                            <comment><![CDATA[Uses 880 if left blank]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </account_code>
                        <bill_template_id translate="label">
                            <label>Bill Template ID</label>
                            <comment><![CDATA[Uses 2 if left blank]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </bill_template_id>
                        <invoice_template_id translate="label">
                            <label>Invoice Template ID</label>
                            <comment><![CDATA[Uses 3 if left blank]]></comment>
